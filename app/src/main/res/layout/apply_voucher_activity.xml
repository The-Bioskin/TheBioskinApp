<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFE3E8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_BackFromCoupon"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:id="@+id/txt_ThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Thanh toán"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <EditText
                    android:id="@+id/edt_Coupon"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mã khuyến mãi"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custome_edt"/>

                <ImageView
                    android:id="@+id/imv_Clear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_baseline_clear_24"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8ECEA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/txt_HoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giảm giá"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingLeft="30dp"
                    android:textColor="#7E7777"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể chọn 1 voucher"
                    android:textSize="12sp"
                    android:paddingLeft="30dp"
                    android:textColor="#7E7777"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:padding="10dp">
                <ListView
                    android:id="@+id/lv_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8ECEA"/>
            <Button
                android:id="@+id/btn_ApDungVoucher"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Áp dụng"
                android:textStyle="bold"
                android:textColor="#F8F5F5"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:background="#F7A399"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>