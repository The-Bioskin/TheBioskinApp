<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_corner_pink"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">


    <ImageView
        android:id="@+id/imvCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_gravity="end"/>
    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="50dp">
        <LinearLayout
            android:id="@+id/llFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <ImageView
                android:id="@+id/imvAvaFemale"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/female"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ná»¯"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="50dp">
        <LinearLayout
            android:id="@+id/llMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <ImageView
                android:id="@+id/imvAvaMale"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/male"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>