<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/item_corner_product"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvLocation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/ic_location_on_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLocationStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Cửa hàng The Bioskin Quang Trung"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtDetailStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="256 Quang Trung, phường 12, quận Gò Vấp, TP.HCM"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian hoạt động: 9:00 - 22:00"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: 19004499"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>