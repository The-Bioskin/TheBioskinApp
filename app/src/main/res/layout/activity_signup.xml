<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="MissingConstraint"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_arrow_back"
                android:backgroundTint="#FBC3BC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE BIOSKIN"
                android:textSize="30sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold"
                android:textColor="#EF6351"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="ĐĂNG KÝ"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#070707"
            android:layout_marginTop="10dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">
            <EditText
                android:id="@+id/edt_FullnameInput"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Họ và tên"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:paddingLeft="50sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_contact"
                app:layout_constraintLeft_toLeftOf="@id/edt_FullnameInput"
                app:layout_constraintTop_toTopOf="@id/edt_FullnameInput"
                app:layout_constraintBottom_toBottomOf="@id/edt_FullnameInput"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_UsernameInput"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Tên đăng nhập"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                app:layout_constraintLeft_toLeftOf="@id/edt_UsernameInput"
                app:layout_constraintTop_toTopOf="@id/edt_UsernameInput"
                app:layout_constraintBottom_toBottomOf="@id/edt_UsernameInput"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_PhoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Số điện thoại"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                app:layout_constraintLeft_toLeftOf="@id/edt_PhoneNumberInput"
                app:layout_constraintTop_toTopOf="@id/edt_PhoneNumberInput"
                app:layout_constraintBottom_toBottomOf="@id/edt_PhoneNumberInput"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_EmailInput"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Email"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                app:layout_constraintLeft_toLeftOf="@id/edt_EmailInput"
                app:layout_constraintTop_toTopOf="@id/edt_EmailInput"
                app:layout_constraintBottom_toBottomOf="@id/edt_EmailInput"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_PasswordInput"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Mật khẩu"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:layout_constraintLeft_toLeftOf="@id/edt_PasswordInput"
                app:layout_constraintTop_toTopOf="@id/edt_PasswordInput"
                app:layout_constraintBottom_toBottomOf="@id/edt_PasswordInput"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_PasswordInputAgain"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Nhập lại mật khẩu"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:layout_constraintLeft_toLeftOf="@id/edt_PasswordInputAgain"
                app:layout_constraintTop_toTopOf="@id/edt_PasswordInputAgain"
                app:layout_constraintBottom_toBottomOf="@id/edt_PasswordInputAgain"
                android:layout_marginLeft="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_Check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_check_box"
                android:backgroundTint="#FBC3BC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi đồng ý với"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản của THE BIOSKIN"
                android:textColor="#EF6351"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_corner1"
            android:text="ĐĂNG KÝ TÀI KHOẢN"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hoặc đăng ký bằng"
            android:gravity="center"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/imv_Google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_google"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>