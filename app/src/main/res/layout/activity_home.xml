<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="@+id/ct_head"
                    android:background="#FFE3E8"/>
                <EditText
                    android:id="@+id/edt_SearchedProduct"
                    android:layout_width="match_parent"
                    android:layout_marginRight="110dp"
                    android:layout_height="40dp"
                    android:hint="Tìm kiếm sản phẩm"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/view1"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    android:background="@drawable/item_corner"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="40dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@id/edt_SearchedProduct"
                    app:layout_constraintTop_toTopOf="@id/edt_SearchedProduct"
                    app:layout_constraintLeft_toLeftOf="@id/edt_SearchedProduct"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/imv_ShoppingCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_shopping_cart"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintRight_toRightOf="@id/view1"
                    android:layout_marginRight="60dp"/>
                <ImageView
                    android:id="@+id/imv_Notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications_active"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintRight_toRightOf="@id/view1"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xin chào"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:textSize="20sp"
                    android:textColor="#EF6351"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/idViewPager"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:background="@drawable/HomeCover"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THE BIOSKIN"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#EF6351"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục sản phẩm"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#F38375"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#F38375"
                    app:layout_constraintRight_toRightOf="@id/ct_1"
                    android:layout_marginRight="35dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/ct_1"
                    android:src="@drawable/ic_play_arrow"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="@id/ct_1"
                    app:layout_constraintBottom_toBottomOf="@id/ct_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclBestSeller"
                android:layout_width="390dp"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtBestSeller"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/item_bestselling" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>