<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFE3E8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_ThanhToan"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:id="@+id/txt_ThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Thanh toán"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_DonHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>

                <ListView
                    android:id="@+id/lv_Product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_ThongTinGiaoHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin giao hàng"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/txt_HoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ tên"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_HoVaTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập họ và tên"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"/>

                <TextView
                    android:id="@+id/txt_SoDienThoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_SoDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập số điện thoại"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"/>

                <TextView
                    android:id="@+id/txt_DiaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_DiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập địa chỉ nhận hàng"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"/>

                <TextView
                    android:id="@+id/txt_Tinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỉnh/Thành phố"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_Tinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"/>

                <TextView
                    android:id="@+id/txt_Quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quận/Huyện"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_Quan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"/>

                <TextView
                    android:id="@+id/txt_XaPhuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xã/Phường"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7777"/>

                <EditText
                    android:id="@+id/edt_Phuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8ECEA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txt_GhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú dơn hàng"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/edt_GhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Nhập ghi chú"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:background="@drawable/custome_edt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8ECEA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txt_PhuongThucThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_COD">
                    <ImageView
                        android:id="@+id/imv_COD"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/cash_on_delivery"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_COD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán khi nhận hàng (COD)"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/rad_COD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_Momo">
                    <ImageView
                        android:id="@+id/imv_Momo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/logo_momo_png_1"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_Momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momo"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/rad_Momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="242dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_Banking">
                    <ImageView
                        android:id="@+id/imv_Banking"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/cashless_payment"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_Banking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet Banking"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/rad_Banking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="175dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8ECEA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txt_TTThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin thanh toán"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạm tính"
                        android:textSize="15dp"
                        android:paddingLeft="40dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/txt_TamTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="15dp"
                        android:layout_marginLeft="200dp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí vận chuyển"
                        android:textSize="15dp"
                        android:paddingLeft="40dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/txt_PhiVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="15dp"
                        android:layout_marginLeft="158dp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khuyến mãi"
                    android:textSize="15dp"
                    android:paddingLeft="40dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/coupon"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhập hoặc chọn mã khuyến mãi"
                        android:textSize="15dp"
                        android:paddingLeft="40dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="5dp"
                android:background="#D1CFCF"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền thanh toán"
                    android:textSize="15dp"
                    android:paddingLeft="40dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/txt_Tong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:layout_marginLeft="130dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <Button
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textStyle="bold"
                android:textColor="#F8F5F5"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:background="#F7A399"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>