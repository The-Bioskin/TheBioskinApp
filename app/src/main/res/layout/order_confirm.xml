<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFE3E8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvBackToOrder"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:id="@+id/txtMyOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Đơn hàng của tôi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_DonHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chờ xác nhận (1)"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="center"
                    android:textColor="#F38375"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F8ECEA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_corner_order"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/lnOrderCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng: "
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtOrderCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NTT50"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnOrderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian: "
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtOrderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05/12/2022"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#8A8A8A"/>
                <LinearLayout
                    android:id="@+id/lnOrderItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imvItem"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/taytranghoahong"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtNameItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nước tẩy trang hoa hồng CoCoon 500ml"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:padding="10dp">
                            <TextView
                                android:id="@+id/txtCapacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500ml"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="x2"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="16sp"
                                android:gravity="end"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtPriceItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="68.000 đ"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="16sp"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#8A8A8A"/>
                <LinearLayout
                    android:id="@+id/lnOrderTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/txtQuantityTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 sản phẩm"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="160dp"
                        android:drawableLeft="@drawable/ic_payment"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="end"
                        android:text="136.000 đ"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HỦY ĐƠN HÀNG"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/button_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="250dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>