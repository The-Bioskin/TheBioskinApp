<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchProductActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="@+id/ct_head"
                    android:background="#FFE3E8"/>
                <EditText
                    android:id="@+id/edt_SearchedProduct"
                    android:layout_width="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_height="40dp"
                    android:hint="Tìm kiếm sản phẩm"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/view1"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    android:background="@drawable/item_corner"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="40dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@id/edt_SearchedProduct"
                    app:layout_constraintTop_toTopOf="@id/edt_SearchedProduct"
                    app:layout_constraintLeft_toLeftOf="@id/edt_SearchedProduct"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/imv_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cancel_24"
                    app:layout_constraintBottom_toBottomOf="@id/edt_SearchedProduct"
                    app:layout_constraintTop_toTopOf="@id/edt_SearchedProduct"
                    app:layout_constraintRight_toRightOf="@id/edt_SearchedProduct"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:id="@+id/imv_Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_filter_list"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintRight_toRightOf="@id/view1"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/txt_RecentSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Search"
                    android:textSize="21dp"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_bold"/>
                <TextView
                    android:id="@+id/txt_ClearAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear All"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintRight_toRightOf="@id/ct_head"
                    android:layout_marginRight="15dp"
                    android:textColor="#EF6351"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Son dưỡng"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_outward"
                    app:layout_constraintRight_toRightOf="@id/ct_2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#837D7D"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kem dưỡng da"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_outward"
                    app:layout_constraintRight_toRightOf="@id/ct_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#837D7D"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kem chống nắng"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_outward"
                    app:layout_constraintRight_toRightOf="@id/ct_4"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#FFE3E8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#EF6351"
                    android:textSize="16dp"
                    app:layout_constraintRight_toRightOf="@id/ct_5"
                    app:layout_constraintTop_toTopOf="@id/ct_5"
                    app:layout_constraintBottom_toBottomOf="@id/ct_5"
                    app:layout_constraintLeft_toLeftOf="@id/ct_5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_PopularProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm thịnh hành"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="21dp"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_fire"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view3"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/item_corner3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kem chống nắng"
                        android:textSize="17dp"
                        android:fontFamily="@font/roboto_medium"
                        app:layout_constraintBottom_toBottomOf="@id/view3"
                        app:layout_constraintTop_toTopOf="@id/view3"
                        android:paddingLeft="40dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fire"
                        app:layout_constraintLeft_toLeftOf="@id/view3"
                        app:layout_constraintBottom_toBottomOf="@id/view3"
                        app:layout_constraintTop_toTopOf="@id/view3"
                        android:layout_marginLeft="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <View
                        android:id="@+id/view4"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@drawable/item_corner3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cocoon"
                        android:textSize="17dp"
                        android:fontFamily="@font/roboto_medium"
                        app:layout_constraintBottom_toBottomOf="@id/view4"
                        app:layout_constraintTop_toTopOf="@id/view4"
                        android:paddingLeft="40dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fire"
                        app:layout_constraintLeft_toLeftOf="@id/view4"
                        app:layout_constraintBottom_toBottomOf="@id/view4"
                        app:layout_constraintTop_toTopOf="@id/view4"
                        android:layout_marginLeft="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_SearchingResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kết quả tìm kiếm"
                android:fontFamily="@font/roboto_bold"
                android:textSize="21dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />
            <ListView
                android:id="@+id/lv_ListResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>