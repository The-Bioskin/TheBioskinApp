<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="MissingConstraint"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_arrow_back"
                android:backgroundTint="#FBC3BC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE BIOSKIN"
                android:textSize="30sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold"
                android:textColor="#EF6351"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="QUÊN MẬT KHẨU"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#070707"
            android:layout_marginTop="70dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/edt_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Số điện thoại"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                app:layout_constraintLeft_toLeftOf="@id/edt_PhoneNumber"
                app:layout_constraintTop_toTopOf="@id/edt_PhoneNumber"
                app:layout_constraintBottom_toBottomOf="@id/edt_PhoneNumber"
                android:layout_marginLeft="8dp"/>
            <Button
                android:id="@+id/btn_ReceiveOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_corner1"
                android:text="NHẬN OTP"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_PhoneNumber"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/edt_Otp"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:hint="Nhập OTP"
                android:textSize="18sp"
                android:background="@drawable/item_corner"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/btn_ReceiveOtp"
                android:layout_marginTop="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/edt_Otp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa nhận được OTP?"/>
                <TextView
                    android:id="@+id/txt_SendAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi lại"
                    android:textColor="#EF6351"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_OtpOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_corner1"
                android:text="Tiep tuc"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_Otp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>