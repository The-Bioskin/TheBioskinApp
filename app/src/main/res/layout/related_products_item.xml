<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <View
        android:id="@+id/view_border"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@drawable/item_corner5"
        tools:ignore="MissingConstraints"></View>

    <ImageView
        android:id="@+id/imv_Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vitamintree"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/view_border"
        app:layout_constraintLeft_toLeftOf="@id/view_border"
        app:layout_constraintRight_toRightOf="@id/view_border"/>
    <TextView
        android:id="@+id/txt_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/imv_Image"
        app:layout_constraintLeft_toLeftOf="@id/view_border"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:text="250.000đ"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_Price"
        app:layout_constraintLeft_toLeftOf="@id/view_border"
        app:layout_constraintRight_toRightOf="@id/view_border"
        android:textSize="8sp"
        android:text="Sữa Rửa Mặt Caryophy Ngăn Ngừa Mụn Giảm Thâm 150ml"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_Name"
        app:layout_constraintLeft_toLeftOf="@id/view_border"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.3"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"/>
        <TextView
            android:id="@+id/txt_NumberofRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="265 Ratings"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#EF6351"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>