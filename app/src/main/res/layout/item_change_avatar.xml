<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_corner_pink"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <ImageView
        android:id="@+id/imvCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_gravity="end"/>
    <TextView
        android:id="@+id/txtCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Chụp ảnh mới"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_camera_alt_24"/>
    <TextView
        android:id="@+id/txtPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Chọn từ thiết bị"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_photo_library_24"/>


</FrameLayout>