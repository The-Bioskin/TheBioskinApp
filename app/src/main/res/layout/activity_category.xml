<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:outlineSpotShadowColor="@color/black">

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFE3E8"
                android:layout_marginTop="150dp"
                tools:ignore="MissingPadding"/>

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />
            <TextView
                android:id="@+id/txtCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DANH MỤC SẢN PHẨM"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imvBack"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:id="@+id/lnTayTrang"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtCategories">
                <ImageView
                    android:id="@+id/imvTayTrang"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/TayTrang"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtTayTrang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tẩy trang"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1126 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSuaRuaMat"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnTayTrang">
                <ImageView
                    android:id="@+id/imvSrm"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/Srm"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtSuaRuaMat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sữa rửa mặt"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="142 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnTayDaChet"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnSuaRuaMat">
                <ImageView
                    android:id="@+id/imvTayDaChet"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/TayDaChet"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtTayDaChet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tẩy da chết"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnMatNa"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnTayDaChet">
                <ImageView
                    android:id="@+id/imvMatNa"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/MatNa"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtMatNa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mặt nạ"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnToner"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnMatNa">
                <ImageView
                    android:id="@+id/imvToner"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/Toner"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtToner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước cân bằng"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="210 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSerum"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnToner">
                <ImageView
                    android:id="@+id/imvSerum"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/Serum"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtSerum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tinh chất"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnKemDuong"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnSerum">
                <ImageView
                    android:id="@+id/imvKemDuong"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/KemDuong"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtKemDuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kem dưỡng"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="169 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnKemChongNang"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnKemDuong">
                <ImageView
                    android:id="@+id/imvKcn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/KemChongNang"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtKemChongNang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kem chống nắng"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="86 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnXitKhoang"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnKemChongNang">
                <ImageView
                    android:id="@+id/imvXitKhoang"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/XitKhoang"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtXitKhoang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xịt khoáng"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="47 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSuaTam"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnXitKhoang">
                <ImageView
                    android:id="@+id/imvSuaTam"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/SuaTam"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtSuaTam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sữa tắm"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnDuongThe"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnSuaTam">
                <ImageView
                    android:id="@+id/imvDuongThe"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/DuongThe"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtDuongThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dưỡng thể"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnXitCoThe"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/item_corner"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/lnDuongThe">
                <ImageView
                    android:id="@+id/imvXitCoThe"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/XitCoThe"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/txtXitCoThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xịt cơ thể"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtAmount11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54 sản phẩm"
                        android:textSize="14sp"
                        android:textColor="#7D8FAB"
                        android:paddingTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>